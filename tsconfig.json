{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "rootDir": "./src",
        "baseUrl": "./src",
        "outDir": "./dist",
        "strict": true,
        "module": "commonjs",
        "target": "ES2022",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "Node"
    },
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}