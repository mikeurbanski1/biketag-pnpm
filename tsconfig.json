{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "baseUrl": "./src",
        "outDir": "./dist",
        "strict": true,
        "target": "ES2022",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
    },
    "include": [
        "packages/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}